{
  "compilerOptions": {
    "module": "es6",         // Soporte para ESM
    "moduleResolution": "node", // Resolución de módulos estilo ESM
    "target": "ES2020",           // Compatibilidad con ES2020
    "outDir": "./dist",           // Carpeta de salida
    "rootDir": "./src",           // Carpeta raíz de entrada
    "strict": true,               // Reglas estrictas de TypeScript
    "esModuleInterop": true,      // Interoperabilidad con CommonJS
    "skipLibCheck": true,         // Ignorar verificación de tipos en node_modules
    "resolveJsonModule": true,    // Permite importar JSON
    "verbatimModuleSyntax": false, // Respeta las rutas relativas sin cambios
    "forceConsistentCasingInFileNames": true, // Asegura consistencia de mayúsculas
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
    
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
